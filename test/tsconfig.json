{
    "compilerOptions": {
      "target": "ESNext",                         
      "module": "ESNext",                    
      "outDir": "./dist",
      "rootDir": "./",                                     
      "strict": true,                          
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "moduleResolution": "node"
    },
    "include": ["./src/**/*.ts"]
}